#include <iostream>

int main() {
    int opcao;
    bool continuar = true;
    int contadorSuporte = 0;
    int contadorFinanceiro = 0;
    int contadorGeral = 0;

    std::cout << "Bem-vindo ao chatbot de Atendimento virtual!\n";
    
    while (continuar) {
        std::cout << "\nPor favor, escolha uma das opções abaixo:\n";
        std::cout << "1. Suporte Técnico\n";
        std::cout << "2. Setor Financeiro\n";
        std::cout << "3. Informações Gerais\n";
        std::cout << "4. Sair\n";

        std::cin >> opcao;

        switch (opcao) {
            case 1:
                std::cout << "\nVoce escolheu Suporte Técnico.\n";
                std::cout << "Um de nossos Tecnicos entrarão em contato com voce o mais breve possivel.\n";
                contadorSuporte++;
                break;
            
            case 2:
                std::cout << "\nVoce escolheu Setor Financeiro.\n";
                std::cout << "Por favor, tenha seu CPF em maos para agilizar o atendimento.\n";
                contadorFinanceiro++;
                break;

            case 3:
                std::cout << "\nVoce escolheu Informações Gerais.\n";
                std::cout << "Consulte nossa sessao de FAQ para respostas e perguntas frequentes.\n";
                contadorGeral++;
                break;
            
            case 4:
                std::cout << "\nObrigado por utilizar nosso chatbot de Atendimento virtual. Até logo!\n";
                continuar = false;
                break;

            default:
                std::cout << "\nOpção invalida. Por favor, tente novamente.\n";
                break;
        }

        if (continuar) {
            std::cout << "\n--- Contagem de Acessos ---\n";
            std::cout << "Suporte Tecnico: " << contadorSuporte << "\n";
            std::cout << "Setor Financeiro: " << contadorFinanceiro << "\n";
            std::cout << "Informações Gerais: " << contadorGeral << "\n";
        }
    }

    return 0;
}